#!/bin/bash

# Update the apt cache, upgrade system and clean up past installations
printf "Updating apt cache\n"
sudo apt-get update
printf "Executing distribution upgrade command\n"
sudo apt-get dist-upgrade
printf "Executing upgrade command\n"
sudo apt-get upgrade
printf "Executing autoremove command\n"
sudo apt-get autoremove
printf "Executing autoclean command\n"
sudo apt-get autoclean
printf "Executing clean command\n"
sudo apt-get clean
printf "The system should now be up to date and cleaned up!\n"
exit 0